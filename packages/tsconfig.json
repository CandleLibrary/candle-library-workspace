{
    "compileOnSave": true,
    "compilerOptions": {
        "types": [
            "@types/node"
        ],
        "allowJs": true,
        "alwaysStrict": true,
        "target": "ES2020",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "allowSyntheticDefaultImports": false,
        "disableReferencedProjectLoad": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "module": "ESNext",
        "declaration": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "paths": {
            "@candlelib/conflagrate": [
                "./conflagrate/"
            ],
            "@candlelib/css": [
                "./css/"
            ],
            "@candlelib/cure": [
                "./cure/"
            ],
            "@candlelib/dev-tools": [
                "./tools/"
            ],
            "@candlelib/glow": [
                "./glow/"
            ],
            "@candlelib/html": [
                "./html/"
            ],
            "@candlelib/hydrocarbon": [
                "./hydrocarbon/"
            ],
            "@candlelib/js": [
                "./js/"
            ],
            "@candlelib/lantern": [
                "./lantern/"
            ],
            "@candlelib/log": [
                "./log/"
            ],
            "@candlelib/paraffin": [
                "./paraffin/"
            ],
            "@candlelib/spark": [
                "./spark/"
            ],
            "@candlelib/uri": [
                "./uri/"
            ],
            "@candlelib/wick": [
                "./wick/"
            ],
            "@candlelib/wind": [
                "./wind/"
            ],
        }
    }
}